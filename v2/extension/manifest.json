{
  "manifest_version": 3,
  "name": "Content Safety Classifier",
  "version": "1.0",
  "description": "Classifies webpage content as Safe, Sensitive, Malicious, or Misleading",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5002/*",
    "http://127.0.0.1:5002/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png"
  }
}